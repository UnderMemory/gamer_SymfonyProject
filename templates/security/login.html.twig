{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Tu es connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnection</a>
        </div>
    {% endif %}

    <div class="container">

    <div class="login-top">
        <h1 class="login_title h3 mt-5 mb-3 font-weight-normal">Connecte toi</h1>
        <div class="neon-bar mt-5 mb-5"></div>
    </div>

    <div class="login-form">
        <label class="emailForm" for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        <label class="mdpForm" for="inputPassword">Mot de passe</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
    </div>


    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn-list btn btn-outline-info d-flex justify-content-center m-auto" type="submit">
        Connection
    </button>

    </div>
</form>
{% endblock %}

{% block stylesheet %}
    {{ parent() }}
{% endblock %}
