{% extends 'base.html.twig' %}

{% block title %}index{% endblock %}

{% block body %}

    <div class="editTop">
        <h1 class="edit-game-title">Liste de jeux personnelle</h1>
        <div class="neon-bar mt-5"></div>
    </div>

    <div class="jeux">
        {% for jeu in jeux %}
            <div class="jeu">
                {{ jeu.nom }}
                {{ jeu.description }}
                {{ jeu.photo }}
                {{ jeu.note }}
                <a href={{ path('user_add_jeux', {'id': jeu.id}) }} class="jeu-lien">Noter ce jeu</a>
            </div>
        {% endfor %}
    </div>


{% endblock %}

{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
{% endblock %}