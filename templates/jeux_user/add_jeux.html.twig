{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}

    <div class="editTop">
        <h1 class="edit-game-title">Ajouter une note au jeu !</h1>
        <div class="neon-bar mt-5"></div>
    </div>

     <div class="container">
        <div class="jeux">
            {{ jeu.nom }}
            {{ jeu.description }}
            {{ jeu.photo }}

            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>
     </div>

{% endblock %}

{% block stylesheet %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
{% endblock %}